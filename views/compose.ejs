<!-- views/home.ejs -->
<%- include("partials/header.ejs") %>
<div class="left-content">
  <h1>Compose</h1>
  <form action="/compose" method="POST" class="form-left">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <br />

      <input type="text" id="postTitle" name="postTitle" class="input-field" />
    </div>
    <div class="form-group">
      <label for="postContent">Post</label>
      <br />

      <textarea
        name="postContent"
        class="input-field postContent"
        id="postContent"
        cols="22"
        rows="5"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" name="publishButton" class="publish-button">
        Publish
      </button>
    </div>
  </form>
</div>
<%- include("partials/footer.ejs") %>
